<RuleSet
		xmlns="http://msscf.org:8088/msscf/2.0.13/xsd/cfgenkb-2.13-ruleset.xsd"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:xs="http://www.w3.org/2001/XMLSchema"
		xsi:schemaLocation="http://msscf.org:8088/msscf/2.0.13/xsd/cfgenkb-2.13-ruleset.xsd http://msscf.org:8088/msscf/2.0.13/xsd/cfgenkb-2.13-ruleset.xsd"
	ToolSet="java+javafx"
	Name="Top"
	Revision="3.0"
	Descr="Java 25 JavaFX GUI prototype top level rules for building files">

	<GenRule GenDef="MinorVersion" Name="top"
		>$iterate SchemaDef( each schemaFiles )$</GenRule>

	<GenRule ScopeDef="MinorVersion" GenDef="SchemaDef" Name="schemaFiles"
		>$validatePageData$$fileSchemaJavaFXGitIgnore$$fileSchemaJavaJavaFxPomXml$$fileISchemaJavaFXSchemaJava$$fileSchemaJavaFXSchemaJava$$iterate SchemaTables( each tableFiles )$</GenRule>

	<GenRule GenDef="SchemaDef" Name="validatePageData"
		>$iterate SchemaTables( each validatePageData )$</GenRule>
	<GenRule GenDef="Table" Name="validatePageData"
		>$switch PageData yes checkPageDataNoSubclasses default empty$</GenRule>
	<GenRule GenDef="Table" Name="checkPageDataNoSubclasses"
		>$switch HasSubClasses no checkPageDataNormalizedKey default FailAssertPageDataNotAllowedForTablesWithSubclasses$</GenRule>
	<GenRule GenDef="Table" Name="checkPageDataNormalizedKey"
		>$reference BaseClass reference PrimaryKeyIndex checkPageDataNormalizedKey$</GenRule>
	<GenRule GenDef="Index" Name="checkPageDataNormalizedKey"
		>$iterate Columns( each checkPageDataNormalizedKey )$</GenRule>
	<GenRule GenDef="IndexCol" Name="checkPageDataNormalizedKey"
		>$switch IsNullable no empty default FailAssertPageDataNotAllowedForPrimaryKeyWithOptionalColumns$</GenRule>

	<GenRule GenDef="Table" Name="tableFiles"
		>$switch HasDefSchema yes empty default realTableFiles$</GenRule>

	<GenRule GenDef="Table" Name="realTableFiles"
		>$fileISchemaJavaFXTableFactoryJava$$fileISchemaJavaFXTableChosenJava$$fileISchemaJavaFXTablePaneCommonJava$$fileISchemaJavaFXTablePaneListJava$$fileSchemaJavaFXTableFactoryJava$$fileSchemaJavaFXTableAttrPaneJava$$fileSchemaJavaFXTableAskDeleteFormJava$$fileSchemaJavaFXTableEltTabPaneJava$$fileSchemaJavaFXTableListPaneJava$$switch IsInstantiable yes maybeFileSchemaJavaFXTableFinderFormJava default empty$$fileSchemaJavaFXTablePickerPaneJava$$fileSchemaJavaFXTablePickerFormJava$$fileSchemaJavaFXTableAddPaneJava$$fileSchemaJavaFXTableViewEditPaneJava$$fileSchemaJavaFXTableAddFormJava$$fileSchemaJavaFXTableViewEditFormJava$$switch PageData yes fileISchemaJavaFXTablePageCallbackJava default empty$</GenRule>

	<GenRule GenDef="Table" Name="maybeFileSchemaJavaFXTableFinderFormJava"
		>$switch HasContainer no fileSchemaJavaFXTableFinderFormJava default containerCheckFileSchemaJavaFXTableFinderFormJava$</GenRule>

	<GenRule GenDef="Table" Name="containerCheckFileSchemaJavaFXTableFinderFormJava"
		>$switch ContainerIsTenantOrCluster yes fileSchemaJavaFXTableFinderFormJava default empty$</GenRule>

</RuleSet>
