<RuleSet
	xmlns="https://msobkow.github.io/msscf/2.0.13/xsd/cfgenkb-2.13-ruleset.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xsi:schemaLocation="https://msobkow.github.io/msscf/2.0.13/xsd/cfgenkb-2.13-ruleset.xsd https://msobkow.github.io/msscf/2.0.13/xsd/cfgenkb-2.13-ruleset.xsd"
	ToolSet="java"
	Name="resources/user-default.properties"
	Revision="3.0"
	Descr="User default properties">

	<GenFile GenDef="SchemaDef" Name="fileResourcesUserDefaultProperties"
			GenerateOnce="false"
		ModuleName="$reference ManufacturingSchema lower JavaPackage$"
		SourceBundle="java"
		BasePackageName="$reference ManufacturingSchema lower JavaPackage$.$reference ManufacturingSchema lower SchemaName$jpa/src/main/resources"
		SubPackageName=""
		ExpansionClassName="$SchemaName$UserDefaultProperties"
		ExpansionKeyName="$SchemaName$UserDefaultProperties"
		ExpansionFileName="user-default.properties"
>#user-default.properties for $SchemaName$$declUserDefaultPropertiesUserSettings$$iterate SchemaRefs( each declUserDefaultPropertiesDbSettings empty empty)$$declUserDefaultPropertiesDbSettings$</GenFile>

<GenRule GenDef="SchemaRef" Name="declUserDefaultPropertiesDbSettings">$reference RefSchema declUserDefaultPropertiesDbSettings$</GenRule>

<GenRule GenDef="SchemaDef" Name="declUserDefaultPropertiesUserSettings">
# user configuration options
jakarta.persistence.jdbc.url=jdbc:postgresql://127.0.0.1:5432/myappdb
jakarta.persistence.jdbc.user=postgres
jakarta.persistence.jdbc.password=mypgpassword
hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
</GenRule>

<GenRule GenDef="SchemaDef" Name="declUserDefaultPropertiesDbSettings">
# $lower DbSchemaName$ specific user configuration options
#$lower DbSchemaName$.jakarta.persistence.jdbc.url=jdbc:postgresql://127.0.0.1:5432/$lower DbSchemaName$
#$lower DbSchemaName$.jakarta.persistence.jdbc.user=postgres
#$lower DbSchemaName$.jakarta.persistence.jdbc.password=mypgpassword
#$lower DbSchemaName$.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
#$lower DbSchemaName$.hibernate.hbm2ddl.auto=create
$lower DbSchemaName$.hibernate.hbm2ddl.auto=update
$lower DbSchemaName$.hibernate.show_sql=false
$lower DbSchemaName$.hibernate.format_sql=false
$lower DbSchemaName$.hibernate.use_sql_comments=false
#$lower DbSchemaName$.hikari.maximum-pool-size=10
#$lower DbSchemaName$.hikari.minimum-idle=2
</GenRule>

</RuleSet>
